<h1>Listing purchases</h1>

<table>
  <tr>
    <th>Cart</th>
    <th>Ip address</th>
    <th>First name</th>
    <th>Last name</th>
    <th>Card type</th>
    <th>Card expires on</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @purchases.each do |purchase| %>
  <tr>
    <td><%= purchase.cart_id %></td>
    <td><%= purchase.ip_address %></td>
    <td><%= purchase.first_name %></td>
    <td><%= purchase.last_name %></td>
    <td><%= purchase.card_type %></td>
    <td><%= purchase.card_expires_on %></td>
    <td><%= link_to 'Show', purchase %></td>
    <td><%= link_to 'Edit', edit_purchase_path(purchase) %></td>
    <td><%= link_to 'Destroy', purchase, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

